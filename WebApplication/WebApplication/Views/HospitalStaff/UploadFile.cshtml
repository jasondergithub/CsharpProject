@model WebApplication.Models.Reason
@{
    ViewBag.Title = "Reason";
}

<script type="text/javascript">
    function showEssentialFile() {
        var folderNames = @Html.Raw(Json.Encode(@ViewBag.folderName));
        for (let i = 0; i < folderNames.length; i++)
        {
            document.getElementById(folderNames[i]).style.display = 'table-row';
        }
    }


</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1>檔案上傳</h1>
    <body onload="showEssentialFile()">
        <table class="table">
            <thead>
                <tr>
                    <th>上傳內容</th>
                    <th>檔案上傳</th>
                    <th>未上傳理由</th>
                </tr>
            </thead>
            <tbody>

                <tr id="reasonA">
                    <td>
                        @Html.LabelFor(model => model.reasonA, htmlAttributes: new { @class = "control-label"})
                    </td>
                    <td>
                        <input type="file" name="photos" />
                    </td>
                    <td>
                        @Html.EditorFor(model => model.reasonA, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>

                <tr id="reasonS">
                    <td>
                        @Html.LabelFor(model => model.reasonS, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        <input type="file" name="photos" />
                    </td>
                    <td>
                        @Html.EditorFor(model => model.reasonS, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>

                <tr id="reasonU">
                    <td>
                        @Html.LabelFor(model => model.reasonU, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        <input type="file" name="photos" />
                    </td>
                    <td>
                        @Html.EditorFor(model => model.reasonU, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>


            </tbody>

        </table>
    </body>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <input type="submit" value="確認" class="btn btn-default" style="width:100px; height:50px" />
            <input type="submit" value="上傳" class="btn btn-default" style="width:100px; height:50px" />
        </div>
    </div>

}

